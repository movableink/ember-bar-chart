<DocsDemo as |demo|>
  <demo.example @name="examples-labels-left.hbs">
    <MeasuredTextGroup as |textGroup|>
      {{#let (add 10 textGroup.maxSize) as |textSpacing|}}
        <BarChart
          @barHeight={{10}}
          @barGap={{10}}
          class="overflow-visible mt-10 mb-10 w-full"
          style={{html-safe (concat "padding-left: " textSpacing "px")}}
          as |chart|
        >
          <chart.Bar @value={{80}} as |bar|>
            <textGroup.Text y={{bar.yOffset}} dx={{sub 0 textSpacing}} dy="0.6em">
              First Bar
            </textGroup.Text>
            <bar.Rect />
          </chart.Bar>

          <chart.Bar @value={{50}} as |bar|>
            <textGroup.Text y={{bar.yOffset}} dx={{sub 0 textSpacing}} dy="0.6em">
              Second Bar
            </textGroup.Text>
            <bar.Rect />
          </chart.Bar>

          <chart.Bar @value={{70}} as |bar|>
            <textGroup.Text y={{bar.yOffset}} dx={{sub 0 textSpacing}} dy="0.6em">
              Third Bar
            </textGroup.Text>
            <bar.Rect />
          </chart.Bar>
        </BarChart>
      {{/let}}
    </MeasuredTextGroup>
  </demo.example>

  {{demo.snippet 'examples-labels-left.hbs'}}
</DocsDemo>
