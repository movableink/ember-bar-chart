<DocsDemo as |demo|>
  <demo.example @name="examples-labels-right.hbs">
    <MeasuredTextGroup as |textGroup|>
      <BarChart
        @barHeight={{10}}
        @barGap={{10}}
        class="overflow-visible mt-10 mb-10 w-full"
        style={{html-safe (concat "padding-right: " (add 10 textGroup.maxSize) "px")}}
        as |chart|
      >
        <chart.Bar @value={{80}} as |bar|>
          <bar.Rect />
          <textGroup.Text y={{bar.yOffset}} x={{bar.width}} dx="10px" dy="0.6em">
            First Bar
          </textGroup.Text>
        </chart.Bar>

        <chart.Bar @value={{50}} as |bar|>
          <bar.Rect />
          <textGroup.Text y={{bar.yOffset}} x={{bar.width}} dx="10px" dy="0.6em">
            Second Bar
          </textGroup.Text>
        </chart.Bar>

        <chart.Bar @value={{70}} as |bar|>
          <bar.Rect />
          <textGroup.Text y={{bar.yOffset}} x={{bar.width}} dx="10px" dy="0.6em">
            Third Bar
          </textGroup.Text>
        </chart.Bar>
      </BarChart>
    </MeasuredTextGroup>
  </demo.example>

  {{demo.snippet 'examples-labels-right.hbs'}}
</DocsDemo>
