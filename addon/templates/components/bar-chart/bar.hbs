<g
  {{did-insert (fn @reportValue @value)}}
  {{did-update (fn @reportValue @value) @value}}
  {{will-destroy @onBarDestroy}}
...attributes
>
  {{#if hasBlock}}
    {{yield (hash
      Rect=(component 'bar-chart/rect'
        height=@height
        width=this.widthPercentage
        setBarPosition=(fn @setBarPosition this)
        positionDidChange=this.updatePosition
        onDestroy=@onRectDestroy
      )
      height=@height
      yOffset=this.yOffset
      width=this.width
    )}}
  {{else}}
    <BarChart::Rect
      @height={{@height}}
      @width={{this.widthPercentage}}
      @setBarPosition={{fn @setBarPosition this}}
      @positionDidChange={{this.updatePosition}}
      @onDestroy={{@onRectDestroy}}
    />
  {{/if}}
</g>